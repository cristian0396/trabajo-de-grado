             x:Class="Proyecto.Vistas.LeccionP1">
    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!--<Image Grid.Row="0" Source="{Binding DirImagen}" Margin="0,30,0,0"/>-->
                <Label Grid.Row="0" Text="Titulo" FontSize="30" TextColor="Black" Margin="20,30,0,20"/>
                <Label Grid.Row="1" Text="Contenido" FontSize="20" TextColor="Black" Margin="20,0,0,20" />
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>