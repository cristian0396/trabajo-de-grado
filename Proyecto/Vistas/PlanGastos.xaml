                    <Button Grid.Row="6" Grid.Column="0" Text="Generar reporte" Margin="0,30,0,0"/>
                    <Button Grid.Row="6" Grid.Column="1" Text="Siguiente nivel" Margin="0,30,0,0"/>
                </Grid>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>